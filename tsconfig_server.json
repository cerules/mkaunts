{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./app",
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"]
  },
  "filesGlob": [
    "./src/node/**/*.ts",
    "./src/shared/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages",
    "app",
    "build"
  ]
}